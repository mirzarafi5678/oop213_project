<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.launchcompanysundarban.SearchLaunchTripController"
      spacing="10" style="-fx-padding: 20;">

    <HBox spacing="8">
        <Button fx:id="backBtn" text="â—€ Back"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="loginBtn" text="Login / Passenger"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="fromField" promptText="From (e.g., Dhaka)"/>
        <TextField fx:id="toField" promptText="To (e.g., Barisal)"/>
        <DatePicker fx:id="datePicker" promptText="Travel date"/>
        <Button text="Search" onAction="#onSearch"/>
    </HBox>

    <Label fx:id="validationLabel" style="-fx-text-fill: red;"/>

    <TableView fx:id="tripTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="colRoute" text="Route" prefWidth="260"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colFare" text="Fare" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
