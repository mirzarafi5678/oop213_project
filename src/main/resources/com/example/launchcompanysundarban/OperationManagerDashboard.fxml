<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.launchcompanysundarban.OperationManagerDashboardController">

    <top>
        <HBox style="-fx-background-color: #2E86C1;" spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="Operation Manager Dashboard" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
            <Label fx:id="welcomeLabel" style="-fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="notificationsBtn" text="Notifications" style="-fx-background-color: #F39C12; -fx-text-fill: white;"/>
            <Button fx:id="logoutBtn" text="Logout" style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10.0" style="-fx-background-color: #F4F6F6;">
            <padding>
                <Insets top="12.0" right="12.0" bottom="12.0" left="12.0"/>
            </padding>

            <Label text="Scheduling &amp; Operations" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnCreateSchedule" text="Create &amp; Publish Schedule" maxWidth="260"/>
            <Button fx:id="btnAssignCrew" text="Assign Crew" maxWidth="260"/>
            <Button fx:id="btnMarkDelayed" text="Mark Trip as Delayed" maxWidth="260"/>
            <Button fx:id="btnCancelTrip" text="Cancel/Remove Trip" maxWidth="260"/>

            <Separator/>

            <Label text="Safety &amp; Maintenance" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnMaintenance" text="Approve/Reject Maintenance" maxWidth="260"/>
            <Button fx:id="btnReportIncident" text="Report Emergency Incident" maxWidth="260"/>

            <Separator/>

            <Label text="Commercial" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnFarePromo" text="Update Fare / Create Promotion" maxWidth="260"/>
            <Button fx:id="btnFeedback" text="Reply Passenger Feedback" maxWidth="260"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="centerStack">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Label text="Select a task from the left menu" style="-fx-font-size: 16px;"/>
        </StackPane>
    </center>
</BorderPane>
