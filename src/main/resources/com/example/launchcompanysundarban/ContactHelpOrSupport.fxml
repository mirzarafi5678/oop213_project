<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.launchcompanysundarban.ContactHelpOrSupportController"
      spacing="10" style="-fx-padding: 20;">

    <HBox spacing="8">
        <Button fx:id="backBtn" text="â—€ Back"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="loginBtn" text="Login / Passenger"/>
    </HBox>

    <HBox spacing="5">
        <ComboBox fx:id="countryCode" prefWidth="100" promptText="+880 / +91"/>
        <TextField fx:id="phone" promptText="Phone (digits only)"/>
    </HBox>
    <TextField fx:id="email" promptText="Email (name@example.com)"/>
    <TextArea fx:id="message" promptText="Your Message (min 10 chars)" prefHeight="150"/>
    <CheckBox fx:id="asFeedbackCheck" text="Also send as Feedback"/>
    <Button text="Send" onAction="#onSend"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
</VBox>
