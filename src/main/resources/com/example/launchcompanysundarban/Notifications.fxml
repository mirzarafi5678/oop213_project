<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.launchcompanysundarban.NotificationsController" spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox spacing="8">
        <Button fx:id="backBtn" text="â—€ Back"/>
        <Label text="Notifications" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="clearBtn" text="Clear All"/>
    </HBox>

    <TableView fx:id="notificationTable" prefHeight="220">
        <columns>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
            <TableColumn fx:id="colMessage" text="Message" prefWidth="460"/>
            <TableColumn fx:id="colDate" text="Time" prefWidth="160"/>
        </columns>
    </TableView>

    <TitledPane text="Details" expanded="true">
        <VBox spacing="8">
            <TextArea fx:id="detailArea" wrapText="true" editable="false" prefRowCount="4"/>
            <HBox spacing="8">
                <TextField fx:id="replyField" promptText="Reply (for Support/Feedback)"/>
                <Button fx:id="replyBtn" text="Send Reply"/>
            </HBox>
            <Label fx:id="emptyLabel" style="-fx-text-fill: #7f8c8d;"/>
        </VBox>
    </TitledPane>
</VBox>
