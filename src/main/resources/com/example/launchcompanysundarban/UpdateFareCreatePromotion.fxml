<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.launchcompanysundarban.UpdateFareCreatePromotionController"
      spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox spacing="8">
        <Button fx:id="backBtn" text="â—€ Back"/>
        <Label text="Update Fare / Create Promotion" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <ComboBox fx:id="tripSelect" promptText="Select trip (ID, route, date)" prefWidth="500"/>
    <TextField fx:id="fareField" promptText="New Fare (numeric, e.g., 550)"/>
    <TextField fx:id="promoField" promptText="Promotion text (optional)"/>
    <Button fx:id="updateBtn" text="Update Fare / Promo" style="-fx-background-color: #2E86C1; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>
