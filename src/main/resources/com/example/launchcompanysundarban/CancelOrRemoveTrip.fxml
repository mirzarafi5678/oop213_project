<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.launchcompanysundarban.CancelOrRemoveTripController"
      spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox spacing="8">
        <Button fx:id="backBtn" text="â—€ Back"/>
        <Label text="Cancel/Remove Trip" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <ComboBox fx:id="tripSelect" promptText="Select trip (ID, route, date)" prefWidth="500"/>
    <TextArea fx:id="reasonField" promptText="Reason for cancellation (e.g., weather, technical)" prefRowCount="3"/>
    <Button fx:id="cancelBtn" text="Cancel Trip" style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>
