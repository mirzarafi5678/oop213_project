<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.launchcompanysundarban.BookLaunchTripController"
      spacing="12" style="-fx-padding: 20;">

    <HBox spacing="8">
        <Button fx:id="backBtn" text="â—€ Back"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="loginBtn" text="Login / Passenger"/>
    </HBox>

    <Label fx:id="tripDetails" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>

    <HBox spacing="8">
        <Label text="Deck:"/>
        <ComboBox fx:id="deckCombo" promptText="Select deck"/>
        <Label text="Free:"/>
        <Label fx:id="freeSeatsLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <HBox spacing="8">
        <Label text="Seat:"/>
        <ComboBox fx:id="seatCombo" promptText="Select seat number" prefWidth="160"/>
        <Button fx:id="reserveBtn" text="Reserve Seat"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>
